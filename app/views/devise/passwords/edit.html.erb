<% provide :title, "Change your password" %>
<div class="row">
  <div class="offset-md-4 col-md-4">
    <h2 class="center">Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "New password" %><br />

        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control" %>

        <% if @minimum_password_length %>
          <small class="form-text text-muted">
            <%= @minimum_password_length %> characters minimum
          </small>
        <% end %>

        <%= render "shared/error_message", object: @user, field: :password %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        <%= render "shared/error_message", object: @user, field: :password_confirmation %>
      </div>

      <div class="form-group">
        <%= f.submit "Change my password", class: "btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<%= render "shared/highlight_error_field" %>
