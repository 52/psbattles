<% if @battles.any? %>
  <div id="sort_by_links" class="row">
    <div class="offset-md-2 col-md-6">
    <%= link_to "Top", battles_path, id: "top_link",
                remote: true, data: {params: "type=top"}, class: "active" %>
    |
    <%= link_to "Newest", battles_path, id: "newest_link",
                remote: true, data: {params: "type=newest"} %>
    </div>
  </div>

  <div id="battles">
    <%= render @battles %>
  </div>
<% end %>
