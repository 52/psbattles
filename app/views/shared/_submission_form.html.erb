<div class="row">
  <div class="col-md-8 offset-md-2">
    <%= form_for [@battle, @submission], remote: true do |f| %>
      <div class="form-group">
        <%= f.text_field :link, placeholder: "Imgur.com link", class: "form-control" %>
        <%= render "shared/error_message", object: @submission, field: :link %>
      </div>

      <div class="form-group">
        <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
        <%= render "shared/error_message", object: @submission, field: :title %>
      </div>

      <div class="form-group">
        <%= f.text_area :description, placeholder: "Description", class: "form-control" %>
        <%= render "shared/error_message", object: @submission, field: :description %>
      </div>

      <div class="form-group">
        <%= f.submit button, class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
</div>

<%= render "shared/highlight_error_field" %>
